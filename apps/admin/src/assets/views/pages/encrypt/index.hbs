<div class="container">
  <div class="row justify-content-center">
    <form method="POST" action="/admin/encrypt" class="login-form border border-info">
      <div class="form-group">
        <label for="input-raw-string" class="col-form-label-lg">Encrypt target</label>
        <input type="text" class="form-control form-control-lg" id="input-raw-string" name="value" value="{{value}}"
          required>
      </div>

      {{#if encrypted }}
      <div class="alert alert-success encryption-result" role="alert">
        {{encrypted}}
      </div>
      {{/if}}
      <button type="submit" class="btn btn-primary">login</button>
    </form>
  </div>
</div>
