<div class="container">
  <div class="row row-container justify-content-center">
    <h1>Users</h1>
  </div>

  <div class="row row-container justify-content-center">
    <form method="GET" action="/admin/user/register">
      <button type="submit" class="btn btn-info">
        <span class="material-icons">add</span>
      </button>
    </form>
  </div>

  {{#if message }}
  <div class="row justify-content-center">
    <div class="alert alert-success" role="alert">
      {{message}}
    </div>
  </div>
  {{/if}}

  <div class="row row-container justify-content-center">
    <table class="table table-striped table-bordered table-hover">
      <thead class="thead-dark">
        <tr>
          <th>ID</th>
          <th>Usernmae</th>
          <th>CreatedAt</th>
          <th>UpdatedAt</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each users}}
        <tr>
          <td>{{this.id}}</td>
          <td>{{this.username}}</td>
          <td>{{this.createdAt}}</td>
          <td>{{this.updatedAt}}</td>
          <td>
            <a href="/admin/user/edit/{{this.id}}" class="btn btn-outline-info"><span
                class="material-icons">edit</span></a>
            <form method="GET" action="/admin/user/delete/{{this.id}}">
              <button type="submit" class="btn btn-outline-danger"><span class="material-icons">delete</span></button>
            </form>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
